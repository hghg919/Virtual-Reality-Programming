<Page x:Class="MedicineManager.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="450"
      Title="HomePage" Background="#F5F5F7">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="15" Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Viewbox Grid.Row="1" VerticalAlignment="Top" Stretch="Uniform">
                    <Calendar x:Name="HomeCalendar" 
                              SelectionMode="SingleDate"
                              SelectedDatesChanged="HomeCalendar_SelectedDatesChanged"
                              LayoutUpdated="HomeCalendar_LayoutUpdated"/>
                </Viewbox>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="15" Margin="0,0,5,0"
                    MouseLeftButtonDown="GoToChartPage_Click" Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="약 종류" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>

                    <Viewbox Grid.Row="1" Stretch="Uniform">
                        <Grid Width="100" Height="100">
                            <Canvas x:Name="PieChartCanvas" Width="100" Height="100"/>
                            <Ellipse Width="60" Height="60" Fill="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Viewbox>

                    <StackPanel x:Name="PieLegendPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="15" Margin="5,0,0,0"
                    MouseLeftButtonDown="GoToChartPage_Click" Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2"/>
                </Border.Effect>

                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="폐기 예정" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                    <Grid Grid.Row="1" VerticalAlignment="Bottom">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Bottom" Margin="5,0">
                            <TextBlock x:Name="CountMonth1" Text="0" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="#EF5350" Margin="0,0,0,2"/>
                            <Rectangle x:Name="BarMonth1" Height="0" Fill="#EF9A9A" HorizontalAlignment="Stretch" RadiusX="4" RadiusY="4"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="5,0">
                            <TextBlock x:Name="CountMonth2" Text="0" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="#E53935" Margin="0,0,0,2"/>
                            <Rectangle x:Name="BarMonth2" Height="0" Fill="#EF5350" HorizontalAlignment="Stretch" RadiusX="4" RadiusY="4"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="5,0">
                            <TextBlock x:Name="CountMonth3" Text="0" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="#C62828" Margin="0,0,0,2"/>
                            <Rectangle x:Name="BarMonth3" Height="0" Fill="#C62828" HorizontalAlignment="Stretch" RadiusX="4" RadiusY="4"/>
                        </StackPanel>
                    </Grid>

                    <TextBlock x:Name="BarChartLabel" Grid.Row="2" Text="- / - / -" Foreground="Gray" HorizontalAlignment="Center" FontSize="10" Margin="0,10,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>