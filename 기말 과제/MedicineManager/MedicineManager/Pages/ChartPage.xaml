<Page x:Class="MedicineManager.Pages.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ChartPage" Background="White">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="15">
            <TextBlock Text="통계 분석" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <Border Background="White" CornerRadius="15" Height="250" Margin="0,0,0,20" BorderBrush="#EEE" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="약 종류별 보유 비율" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <Grid>
                        <Ellipse Width="150" Height="150" Fill="#E0E0E0"/>
                        <Path Data="M 75,75 L 75,0 A 75,75 0 0 1 150,75 Z" Fill="#4CAF50"/>
                        <Path Data="M 75,75 L 150,75 A 75,75 0 0 1 75,150 Z" Fill="#2196F3"/>
                    </Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <TextBlock Text="■ 알약(50%) " Foreground="#4CAF50" FontSize="12"/>
                        <TextBlock Text="■ 물약(30%) " Foreground="#2196F3" FontSize="12"/>
                        <TextBlock Text="■ 기타(20%)" Foreground="#E0E0E0" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Background="White" CornerRadius="15" Height="250" BorderBrush="#EEE" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="월별 폐기 예상 수량" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Height="150">
                        <StackPanel VerticalAlignment="Bottom" Margin="10,0">
                            <Rectangle Width="30" Height="50" Fill="#FFCDD2"/>
                            <TextBlock Text="1월" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom" Margin="10,0">
                            <Rectangle Width="30" Height="80" Fill="#EF5350"/>
                            <TextBlock Text="2월" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom" Margin="10,0">
                            <Rectangle Width="30" Height="120" Fill="#C62828"/>
                            <TextBlock Text="3월" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>