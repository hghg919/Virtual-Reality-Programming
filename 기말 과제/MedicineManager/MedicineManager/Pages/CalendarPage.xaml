<Page x:Class="MedicineManager.Pages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="CalendarPage" Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="15" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Margin="10">
                <TextBlock Text="📅 유통기한 확인" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <Viewbox Stretch="Uniform">
                    <Calendar x:Name="DetailCalendar" SelectionMode="SingleDate"/>
                </Viewbox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#F9F9F9" CornerRadius="15">
            <Grid Margin="15">  
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="📋 이 날짜에 만료되는 약" FontWeight="Bold" Foreground="#555" Margin="0,0,0,10"/>

                <ListBox Grid.Row="1" Background="Transparent" BorderThickness="0">
                    <ListBoxItem Content="💊 타이레놀 (2025-12-10 만료)" Padding="10" FontSize="14"/>
                    <ListBoxItem Content="💊 후시딘 (2025-12-10 만료)" Padding="10" FontSize="14"/>
                    <ListBoxItem Content="등록된 약이 없습니다." Foreground="Gray" Padding="10"/>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Page>