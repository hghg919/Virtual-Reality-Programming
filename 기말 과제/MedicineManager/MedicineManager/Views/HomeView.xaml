<UserControl x:Class="MedicineManager.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="450"
             Loaded="UserControl_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="0" Margin="10">
            <Calendar x:Name="MainCalendar"/>
        </Viewbox>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="5" CornerRadius="10" BorderBrush="#CCCCCC" BorderThickness="1" Background="#FAFAFA">
                <Grid>
                    <TextBlock Text="약 종류" Margin="10" HorizontalAlignment="Left" FontWeight="Bold"/>
                    <Ellipse Width="100" Height="100" Stroke="Gray" StrokeThickness="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <TextBlock Text="원형 그래프" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Grid>
            </Border>

            <Border Grid.Column="1" Margin="5" CornerRadius="10" BorderBrush="#CCCCCC" BorderThickness="1" Background="#FAFAFA">
                <Grid>
                    <TextBlock Text="폐기 예정" Margin="10" HorizontalAlignment="Left" FontWeight="Bold"/>
                    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,20">
                        <Rectangle Width="15" Height="40" Fill="LightGray" Margin="2,0"/>
                        <Rectangle Width="15" Height="70" Fill="Gray" Margin="2,0"/>
                        <Rectangle Width="15" Height="30" Fill="LightGray" Margin="2,0"/>
                    </StackPanel>
                    <TextBlock Text="막대 그래프" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Gray"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>