<Window x:Class="MedicineManager.JoinPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="JoinPopup" Height="640" Width="360"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="#DFFFEA" Geometry="M0,0 H1 V1 H0 Z"/>
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.3,0.3" Center="0.3,0.3" RadiusX="0.7" RadiusY="0.7">
                                <GradientStop Color="#FFEFA5" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.7,0.7" Center="0.7,0.7" RadiusX="0.8" RadiusY="0.8">
                                <GradientStop Color="#A3E6C9" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.5,1.0" Center="0.5,1.0" RadiusX="1.0" RadiusY="1.0">
                                <GradientStop Color="#58C188" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Background>

    <Viewbox Stretch="UniformToFill">
        <Grid Width="360" Height="640">

            <Grid.Resources>
                <Style x:Key="PillButtonStyle" TargetType="Button">
                    <Setter Property="Width" Value="240"/>
                    <Setter Property="Height" Value="45"/>
                    <Setter Property="FontSize" Value="17"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Foreground" Value="#1E1E1E"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" CornerRadius="25" Background="{TemplateBinding Background}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="3" Opacity="0.35"/>
                                    </Border.Effect>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="15" ShadowDepth="4" Opacity="0.55"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <Button Content="←" Width="35" Height="35" FontSize="18" Background="Transparent"
                    BorderBrush="Transparent" HorizontalAlignment="Left" VerticalAlignment="Top"
                    Margin="10" Click="Back_Click"/>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="240">

                <TextBlock Text="회원가입" FontSize="30" FontWeight="Bold" Foreground="#1E1E1E"
                           Margin="0,0,0,30" HorizontalAlignment="Center"/>

                <TextBox x:Name="txtID" Height="45" FontSize="18" Padding="12,6" Margin="0,0,0,15"
                         Text="아이디" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

                <TextBox x:Name="txtPW" Height="45" FontSize="18" Padding="12,6" Margin="0,0,0,15"
                         Text="비밀번호" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

                <TextBox x:Name="txtPWCheck" Height="45" FontSize="18" Padding="12,6" Margin="0,0,0,15"
                         Text="비밀번호 확인" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

                <TextBox x:Name="txtName" Height="45" FontSize="18" Padding="12,6" Margin="0,0,0,15"
                         Text="이름" Foreground="Gray" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

                <TextBox x:Name="txtPhone" Height="45" FontSize="18" Padding="12,6" Margin="0,0,0,15"
                         Text="전화번호" Foreground="Gray" PreviewTextInput="Phone_NumberOnly"
                         TextChanged="Phone_TextChanged" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

                <Grid Margin="0,0,0,25">

                    <DatePicker x:Name="dpBirth"
                        Height="45"
                        FontSize="18"
                        BorderThickness="1"
                        BorderBrush="#ABADB3"
                        VerticalContentAlignment="Center"
                        Padding="8,0,30,0"
                        Foreground="Transparent" 
                        SelectedDateFormat="Short"
                        SelectedDateChanged="dpBirth_SelectedDateChanged"/>

                    <TextBlock x:Name="txtBirthPlaceholder"
                        Text="생년월일"
                        FontSize="18"
                        Foreground="Gray"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0"
                        IsHitTestVisible="False"/>
                </Grid>

                <Button Content="완료" Style="{StaticResource PillButtonStyle}" Click="JoinConfirm_Click"/>
            </StackPanel>

        </Grid>
    </Viewbox>
</Window>