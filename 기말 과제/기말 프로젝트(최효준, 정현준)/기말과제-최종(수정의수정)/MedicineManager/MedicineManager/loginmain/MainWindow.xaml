<Window x:Class="MedicineManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="640" Width="360"
        WindowStartupLocation="CenterScreen">

    <!-- 배경 -->
    <Window.Background>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <DrawingGroup>

                    <!-- 바탕색 -->
                    <GeometryDrawing Brush="#DFFFEA" Geometry="M0,0 H1 V1 H0 Z"/>

                    <!-- 그라디언튼(노란)번짐 -->
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.3,0.3"
                                                 Center="0.3,0.3"
                                                 RadiusX="0.7" RadiusY="0.7">
                                <GradientStop Color="#FFEFA5" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- 그라(민트) 번짐 -->
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.7,0.7"
                                                 Center="0.7,0.7"
                                                 RadiusX="0.8" RadiusY="0.8">
                                <GradientStop Color="#A3E6C9" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <!-- 아래 그라(진초록) 번짐 -->
                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.5,1.0"
                                                 Center="0.5,1.0"
                                                 RadiusX="1.0" RadiusY="1.0">
                                <GradientStop Color="#58C188" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Background>


    <Viewbox Stretch="UniformToFill">
        <Grid Width="360" Height="640">

            <!-- 버튼 스타일 -->
            <Grid.Resources>
                <Style x:Key="PillButtonStyle" TargetType="Button">
                    <Setter Property="Width" Value="250"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#1E1E1E"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        CornerRadius="30"
                                        Background="{TemplateBinding Background}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="3"
                                                          Opacity="0.35"/>
                                    </Border.Effect>

                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>

                                    <!-- Hover -->
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border"
                                                Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="14"
                                                                  ShadowDepth="4"
                                                                  Opacity="0.55"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                    <!-- Pressed -->
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border"
                                                Property="Background"
                                                Value="#F0F0F0"/>
                                        <Setter TargetName="border"
                                                Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8"
                                                                  ShadowDepth="1"
                                                                  Opacity="0.3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <!-- 중앙 번들 -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,40,0,0">

                <!-- 제목 + 로고  -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,-20,0,20">

                    <!-- 로고 -->
                    <Image Source="pack://application:,,,/loginmain/Images/pill.png"
                           Width="45" Height="45"
                           Margin="0,0,10,0"/>

                    <TextBlock Text="약품 관리"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#1E1E1E"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- 밑줄  -->
                <Rectangle Height="2"
                           Width="200"
                           Fill="#B0B0B0"
                           Margin="0,-10,0,40"/>

                <!-- 로그인 -->
                <Button Style="{StaticResource PillButtonStyle}"
                        Content="로그인"
                        Margin="0,0,0,25"
                        Click="Login_Click"/>

                <!-- 회원가입 -->
                <Button Style="{StaticResource PillButtonStyle}"
                        Content="회원가입"
                        Click="Join_Click"/>

            </StackPanel>

        </Grid>
    </Viewbox>
</Window>
