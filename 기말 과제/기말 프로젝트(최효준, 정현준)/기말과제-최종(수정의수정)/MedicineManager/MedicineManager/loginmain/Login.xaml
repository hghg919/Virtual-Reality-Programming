<Window x:Class="MedicineManager.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="640" Width="360"
        WindowStartupLocation="CenterScreen">

    <!-- 배경 그라디언트 -->
    <Window.Background>
        <DrawingBrush>
            <DrawingBrush.Drawing>
                <DrawingGroup>

                    <GeometryDrawing Brush="#DFFFEA" Geometry="M0,0 H1 V1 H0 Z"/>

                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.3,0.3"
                                                 Center="0.3,0.3"
                                                 RadiusX="0.7" RadiusY="0.7">
                                <GradientStop Color="#FFEFA5" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.7,0.7"
                                                 Center="0.7,0.7"
                                                 RadiusX="0.8" RadiusY="0.8">
                                <GradientStop Color="#A3E6C9" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                    <GeometryDrawing>
                        <GeometryDrawing.Brush>
                            <RadialGradientBrush GradientOrigin="0.5,1.0"
                                                 Center="0.5,1.0"
                                                 RadiusX="1.0" RadiusY="1.0">
                                <GradientStop Color="#58C188" Offset="0"/>
                                <GradientStop Color="#00FFFFFF" Offset="1"/>
                            </RadialGradientBrush>
                        </GeometryDrawing.Brush>
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0 1,1"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>

                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
    </Window.Background>

    <Viewbox Stretch="UniformToFill">
        <Grid Width="360" Height="640">

            <!-- 버튼 스타일 -->
            <Grid.Resources>
                <Style x:Key="PillButtonStyle" TargetType="Button">
                    <Setter Property="Width" Value="240"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="FontSize" Value="18"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Foreground" Value="#1E1E1E"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        CornerRadius="30"
                                        Background="{TemplateBinding Background}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12"
                                                          ShadowDepth="3"
                                                          Opacity="0.35"/>
                                    </Border.Effect>

                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="15"
                                                                  ShadowDepth="4"
                                                                  Opacity="0.55"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>

                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                        <Setter TargetName="border" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="8"
                                                                  ShadowDepth="1"
                                                                  Opacity="0.3"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Grid.Resources>

            <!-- 뒤로가기 버튼 -->
            <Button Content="←"
                    Width="35"
                    Height="35"
                    FontSize="18"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Click="Back_Click"/>

            <!-- 로그인 패널 -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Image Source="pack://application:,,,/loginmain/Images/pill.png"
                           Width="35" Height="35" Margin="0,0,10,0"/>
                    <TextBlock Text="로그인"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="#1E1E1E"/>
                </StackPanel>

                <Rectangle Height="2"
                           Width="200"
                           Fill="#1E1E1E"
                           Opacity="0.3"
                           Margin="0,0,0,25"/>

                <!-- 아이디 -->
                <TextBox x:Name="txtID"
                         Width="240"
                         Height="45"
                         Margin="0,0,0,15"
                         FontSize="16"
                         Padding="10"
                         Text="아이디"
                         GotFocus="txtID_GotFocus"
                         LostFocus="txtID_LostFocus"/>

                <!-- 비밀번호 -->
                <PasswordBox x:Name="txtPW"
                             Width="240"
                             Height="45"
                             Margin="0,0,0,25"
                             FontSize="16"
                             Padding="10"
                             GotFocus="PasswordBox_GotFocus"
                             LostFocus="PasswordBox_LostFocus"/>

                <!-- 로그인 버튼  -->
                <Button Content="로그인"
                        Style="{StaticResource PillButtonStyle}"
                        Click="LoginButton_Click"/>
            </StackPanel>

        </Grid>
    </Viewbox>
</Window>
