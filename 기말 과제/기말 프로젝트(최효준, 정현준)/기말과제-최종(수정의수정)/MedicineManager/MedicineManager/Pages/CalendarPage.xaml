<Page x:Class="MedicineManager.Pages.CalendarPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:models="clr-namespace:MedicineManager.Models" 
      mc:Ignorable="d"
      Title="CalendarPage" Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="15" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel Margin="10">
                <TextBlock Text="📅 유통기한 확인" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                <Viewbox Stretch="Uniform">
                    <Calendar x:Name="DetailCalendar" 
                              SelectionMode="SingleDate" 
                              SelectedDatesChanged="DetailCalendar_SelectedDatesChanged"
                              LayoutUpdated="DetailCalendar_LayoutUpdated"/>
                </Viewbox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Background="#F9F9F9" CornerRadius="15">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="ListTitleText" Text="📋 이달에 만료되는 약" FontWeight="Bold" Foreground="#555" Margin="0,0,0,10"/>

                <ListBox x:Name="MonthExpiringListBox" Grid.Row="1" Background="Transparent" BorderThickness="0">
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</Page>