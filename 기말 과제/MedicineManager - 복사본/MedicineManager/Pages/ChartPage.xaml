<Page x:Class="MedicineManager.Pages.ChartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="450"
      Title="ChartPage" Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📊 통계 분석" FontSize="22" FontWeight="Bold" Margin="0,0,0,15"/>

        <Border Grid.Row="1" Background="#FAFAFA" CornerRadius="15" Margin="0,0,0,15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="약 종류별 보유 비율" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Viewbox Grid.Row="1" Stretch="Uniform">
                    <Grid Width="200" Height="200">
                        <Canvas x:Name="PieChartCanvas" Width="200" Height="200"/>
                        <Ellipse Width="100" Height="100" Fill="#FAFAFA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </Viewbox>

                <StackPanel x:Name="PieLegendPanel" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="2" Background="#FAFAFA" CornerRadius="15" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="월별 폐기 예상 수량 (6개월)" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <Grid x:Name="BarsContainer" Grid.Row="1" VerticalAlignment="Bottom" Margin="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <Grid x:Name="LabelsContainer" Grid.Row="2" Margin="10,5,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>