<Page x:Class="MedicineManager.Pages.MyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MyPage" Background="White">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="내 정보 (My Page)" FontSize="24" FontWeight="Bold" Margin="0,0,0,30"/>

            <Border Background="#F5F5F7" CornerRadius="15" Padding="20" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="60" Height="60" Fill="#BDBDBD"/>

                    <StackPanel VerticalAlignment="Center" Margin="15,0,0,0">
                        <TextBlock Text="홍길동 님" FontWeight="Bold" FontSize="18"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Content="🔒 개인정보 변경" Height="50" Margin="0,0,0,10" Background="White" BorderBrush="#DDD" BorderThickness="1"/>
            <Button Content="🔔 알림 설정" Height="50" Margin="0,0,0,10" Background="White" BorderBrush="#DDD" BorderThickness="1"/>
            <Button Content="📢 공지사항" Height="50" Margin="0,0,0,10" Background="White" BorderBrush="#DDD" BorderThickness="1"/>

            <Button Content="로그아웃" Height="50" Margin="0,30,0,0" Background="#FFEBEE" Foreground="#D32F2F" BorderThickness="0" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Page>