<Window x:Class="MedicineManager.Windows.AddMedicineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="새 약 등록" Height="480" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="20" Background="#F5F5F7">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Center">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="100" Height="130" 
                            BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Background="White"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Cursor="Hand" MouseLeftButtonDown="Image_MouseLeftButtonDown">
                        <Grid>
                            <TextBlock Text="사진 등록&#x0a;(클릭)" TextAlignment="Center" 
                                       VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#AAA"/>
                            <Image x:Name="ImgPreview" Stretch="UniformToFill"/>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">

                        <TextBlock Text="자주 찾는 약" FontWeight="Bold" Foreground="#555" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ComboPreset" Height="30" Margin="0,0,0,15"
                                  SelectionChanged="ComboPreset_SelectionChanged"
                                  DisplayMemberPath="Name"/>

                        <TextBlock Text="약 이름" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox x:Name="TxtName" Height="30" Margin="0,0,0,10" VerticalContentAlignment="Center"/>

                        <TextBlock Text="약 종류" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ComboType" Height="30" Margin="0,0,0,10" 
                                  VerticalContentAlignment="Center" IsEditable="True">
                            <ComboBoxItem Content="알약"/>
                            <ComboBoxItem Content="물약"/>
                            <ComboBoxItem Content="가루약"/>
                            <ComboBoxItem Content="연고"/>
                            <ComboBoxItem Content="기타"/>
                        </ComboBox>

                        <TextBlock Text="유통기한" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker x:Name="DateExpiry" Height="30" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="메모" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtMemo" Grid.Row="1" Height="60" TextWrapping="Wrap" AcceptsReturn="True" 
                             VerticalContentAlignment="Top" Padding="5" VerticalScrollBarVisibility="Auto"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="등록 완료" Width="100" Height="40" Margin="0,0,10,0" 
                        Background="#1976D2" Foreground="White" FontWeight="Bold" Click="BtnOk_Click"/>
                <Button Content="취소" Width="100" Height="40" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>