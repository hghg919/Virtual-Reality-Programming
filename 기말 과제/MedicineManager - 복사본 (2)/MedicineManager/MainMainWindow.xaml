<Window x:Class="MedicineManager.MainMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MedicineManager" Height="800" Width="450"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F5F5F7">

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="20,20,20,95"/>

        <Border VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
                Height="70" Background="White" CornerRadius="20" Margin="15,0,15,15">
            <Border.Effect>
                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="3" Opacity="0.15" BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Click="NavButton_Click" Tag="Register" Background="Transparent" BorderThickness="0">
                    <TextBlock x:Name="TxtRegister" Text="등록" FontSize="12" FontWeight="Normal" Foreground="#555" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Grid.Column="1" Click="NavButton_Click" Tag="Calendar" Background="Transparent" BorderThickness="0">
                    <TextBlock x:Name="TxtCalendar" Text="달력" FontSize="12" FontWeight="Normal" Foreground="#555" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Grid.Column="2" Click="NavButton_Click" Tag="Home" Background="Transparent" BorderThickness="0">
                    <Grid>
                        <Path x:Name="IconHome" 
                              Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" 
                              Fill="#555" Stretch="Uniform" Width="24" Height="24"/>
                    </Grid>
                </Button>

                <Button Grid.Column="3" Click="NavButton_Click" Tag="Chart" Background="Transparent" BorderThickness="0">
                    <TextBlock x:Name="TxtChart" Text="차트" FontSize="12" FontWeight="Normal" Foreground="#555" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>

                <Button Grid.Column="4" Click="NavButton_Click" Tag="My" Background="Transparent" BorderThickness="0">
                    <TextBlock x:Name="TxtMy" Text="My" FontSize="12" FontWeight="Normal" Foreground="#555" 
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>