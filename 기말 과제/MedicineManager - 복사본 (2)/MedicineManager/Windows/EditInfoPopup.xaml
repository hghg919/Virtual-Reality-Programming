<Window x:Class="MedicineManager.Windows.EditInfoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="정보 수정" Height="600" Width="360"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">

    <Grid Background="White">
        <StackPanel Margin="25">
            <TextBlock Text="개인정보 변경" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,25"/>

            <TextBlock Text="아이디" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtID" Height="40" FontSize="16" IsReadOnly="True" Background="#F0F0F0" Padding="5,8" Margin="0,0,0,15"/>

            <TextBlock Text="새 비밀번호" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPW" Height="40" FontSize="16" Padding="5,8" Margin="0,0,0,15"/>

            <TextBlock Text="이름" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtName" Height="40" FontSize="16" Padding="5,8" Margin="0,0,0,15"/>

            <TextBlock Text="전화번호" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="TxtPhone" Height="40" FontSize="16" Padding="5,8" Margin="0,0,0,15"
                     TextChanged="TxtPhone_TextChanged"/>

            <TextBlock Text="생년월일" FontWeight="Bold" Margin="0,0,0,5"/>
            <DatePicker x:Name="DpBirth" Height="40" FontSize="16" VerticalContentAlignment="Center" Margin="0,0,0,25"/>

            <StackPanel>
                <Button Content="변경 저장" Height="50" Background="#1976D2" Foreground="White" 
                        FontSize="18" FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        Click="Save_Click"/>

                <Button Content="취소" Height="40" Background="Transparent" Foreground="Gray" 
                        BorderThickness="0" Margin="0,10,0,0" Cursor="Hand"
                        Click="Cancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>