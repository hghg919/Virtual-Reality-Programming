<Window x:Class="WPF_Registration.MembersOnly"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Registration"
        mc:Ignorable="d"
        Title="MembersOnly" Height="400" Width="300"
        Background="Orange">
    <StackPanel Height="360" 
                VerticalAlignment="Bottom"
                Background="Beige"
                Margin="10">
        <TextBlock Text="Welcome" 
                   FontSize="25"
                   HorizontalAlignment="Center"
                   Margin="0,35"/>

        <Separator Background="Blue" Margin="20, 0"/>

        <Grid Height="20"></Grid>
        <TextBlock Text="로그인을 성공하였습니다!!" 
                   FontSize="17" 
                   Margin="20, 10" 
                   HorizontalAlignment="Center"/>

        <Grid Height="100"></Grid>

        <StackPanel>
            <Button x:Name="btnMainGo" 
                    Content="메인화면으로" 
                    FontSize="15"
                    Height="30"
                    Margin="20, 10" 
                    VerticalAlignment="Center" 
                    Click="btnMainGo_Click"/>
            <Button x:Name="btnClose" 
                    Content="종료하기" 
                    FontSize="15"
                    Height="30"
                    Margin="20, 0" 
                    VerticalAlignment="Center" 
                    Click="btnClose_Click_1"/>
        </StackPanel>
    </StackPanel>
</Window>