<Window x:Class="WPF_BMICalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BMICalculator"
        mc:Ignorable="d"
        Title="BMI 계산기" Height="300" Width="280">
    <Grid Margin="0,0,0,0">
        <Label x:Name="label" 
               Content="키(cm)" 
               HorizontalAlignment="Left" 
               Height="30" 
               Margin="32,33,0,0" 
               VerticalAlignment="Top" 
               Width="64" 
               FontSize="15"/>
        <TextBox x:Name="textBox" 
                 HorizontalAlignment="Left" 
                 Margin="122,33,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                  Height="30" 
                 Width="116" 
                 FontSize="15" 
                 RenderTransformOrigin="0.431,0.548" 
                 TextAlignment="Center"/>
        <Label x:Name="label1" 
               Content="체중(kg)" 
               HorizontalAlignment="Left" 
               Margin="32,71,0,0" 
               VerticalAlignment="Top" 
               FontSize="15" 
               RenderTransformOrigin="0.846,0.435"/>
        <TextBox x:Name="textBox1" 
                 HorizontalAlignment="Left" 
                 Height="30" 
                 Margin="122,71,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="116" 
                 FontSize="15" TextAlignment="Center"/>
        <Button x:Name="button" 
                Content="BMI 산출하기" 
                HorizontalAlignment="Left" 
                Height="33" 
                Margin="32,117,0,0" 
                VerticalAlignment="Top" 
                Width="206" 
                FontSize="15" 
                Click="button_Click"/>
        <Label x:Name="label2" 
               Content="BMI 지수" 
               HorizontalAlignment="Left" 
               Margin="32,167,0,0" 
               VerticalAlignment="Top" 
               FontSize="15"/>
        <TextBox x:Name="textBox2" 
                 HorizontalAlignment="Left" 
                 Height="30" 
                 Margin="122,167,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="116" 
                 FontSize="15" 
                 TextAlignment="Center"/>
        <Label x:Name="label3" 
               Content="판정결과" 
               HorizontalAlignment="Left" 
               Height="30" 
               Margin="32,206,0,0" 
               VerticalAlignment="Top" 
               Width="72" 
               FontSize="15"/>
        <TextBox x:Name="textBox3" 
                 HorizontalAlignment="Left" 
                 Height="30" 
                 Margin="122,206,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="116" 
                 FontSize="15" 
                 TextAlignment="Center"/>
    </Grid>
</Window>