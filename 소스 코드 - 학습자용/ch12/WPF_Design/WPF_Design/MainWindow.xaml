<Window x:Class="WPF_Design.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Design"
        mc:Ignorable="d"
        Title="WPF 화면" Height="450" Width="367">
    <Grid>
        <Button x:Name="button" 
                Content="Button" 
                HorizontalAlignment="Left" 
                Margin="43,50,0,0" 
                VerticalAlignment="Top"
                Width="269" Height="55" 
                FontSize="17"/>
        <RadioButton x:Name="radioButton" Content="RadioButton" HorizontalAlignment="Left" Margin="43,152,0,0" VerticalAlignment="Top" FontSize="17" Height="29" Width="117"/>
        <CheckBox x:Name="checkBox" Content="CheckBox" HorizontalAlignment="Left" Margin="43,195,0,0" VerticalAlignment="Top" FontSize="17" RenderTransformOrigin="0.493,-0.598"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="43,245,0,0" VerticalAlignment="Top" Width="267" FontSize="17" RenderTransformOrigin="0.493,0.208">
            <ComboBoxItem Content="스마트폰"/>
            <ComboBoxItem Content="노트북"/>
            <ComboBoxItem Content="컴퓨터"/>
        </ComboBox>

    </Grid>
</Window>
