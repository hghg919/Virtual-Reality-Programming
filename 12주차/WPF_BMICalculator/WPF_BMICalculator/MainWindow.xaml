<Window x:Class="WPF_BMICalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_BMICalculator"
        mc:Ignorable="d"
        Title="BMI 계산기" Height="300" Width="280">
    <Grid>
        <Label x:Name="Label" Content="키(cm)" HorizontalAlignment="Left" Height="30" Margin="32,33,0,0" VerticalAlignment="Top" Width="64"/>
        <Label x:Name="Label1" Content="체중(kg)" HorizontalAlignment="Left" Margin="32,71,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.864,0.435"/>
        <Label x:Name="Label2" Content="Label2" HorizontalAlignment="Left" Height="31" Margin="92,264,0,0" VerticalAlignment="Top" Width="60"/>
        <Label x:Name="Label3" Content="Label3" HorizontalAlignment="Left" Height="30" Margin="82,328,0,0" VerticalAlignment="Top" Width="87"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="30" Margin="122,33,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="116" FontSize="15" RenderTransformOrigin="0.341,0.548" TextAlignment="Center"/>
        <TextBox x:Name="TextBox1" HorizontalAlignment="Left" Height="22" Margin="242,138,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="TextBox2" HorizontalAlignment="Left" Height="16" Margin="242,264,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="TextBox3" HorizontalAlignment="Left" Height="30" Margin="242,328,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="158"/>
        <Button x:Name="button" Content="BMI 산출하기" HorizontalAlignment="Left" Height="33" Margin="32,117,0,0" VerticalAlignment="TOP" Width="206" FontSize="15" Click="button_Click"/>

    </Grid>
</Window>
