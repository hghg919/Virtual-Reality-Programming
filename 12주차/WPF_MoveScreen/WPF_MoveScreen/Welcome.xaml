<Window x:Class="WPF_MoveScreen.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_MoveScreen"
        mc:Ignorable="d"
        Title="Welcome" Height="400" Width="300" Background="LightSalmon">
    <StackPanel Height="360" VerticalAlignment="Bottom" Background="Beige" Margin="10">
        <TextBlock Text="Welcome"  FontSize="25" Margin="0,35" HorizontalAlignment="Center"/>

        <Separator Background="Blue" Margin="20,0"/>

        <Grid Height="20"></Grid>
        <TextBlock Text="오신 것을 환영합니다!!"
                   FontSize="17" Margin="20,10" HorizontalAlignment="Center"/>

        <Grid Height="80"></Grid>
        
        <StackPanel>
            <Button x:Name="btnLogout" Content="◀ 이전화면" FontSize="15" Height="30" Margin="20,15" HorizontalAlignment="Center" Click="btnLogout_Click"/>
            <Button x:Name="btnWithdrawal" Content="다음 화면 ▶" FontSize="15" Height="30" Margin="20,0" HorizontalAlignment="Center" Click="btnWithdrawal_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
